<div class="index_panel">
	<h1>Usuarios</h1>
	<table class="table">
	<thead>
		<td>Correo Electroníco</td>
		<td>Total Ingresos al Sistema</td>
		<td>Perfil</td>
	</thead>
	<tbody>
		<% @user.each do |user| %>
			<tr>
				<td><%= user.email %>
				<td><%= user.sign_in_count %>
				<td><% if user.roles.first.name == "requester" %>
						<%= "Solicitante" %>
					<%elsif user.roles.first.name == "admin1ernivel" %>
						<%= "Administrador 1er Nivel" %>
					<%elsif user.roles.first.name == "admin2donivel"%>
						<%= "Administrador 2do Nivel" %>
					<%elsif user.roles.first.name == "admin"%>
						<%= "Super Administrador" %>
					<%else%>
						<%= ""%>
					<% end %>
				<td><%= link_to 'Mostrar', user, :class => 'btn btn-primary' %>
				<%if can? :edit, user%>
					<%= link_to 'Editar', edit_user_path(@user), :class => 'btn btn-warning' %>
				<% end %>
				<% if can? :destroy, user %>
					<%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Estás seguro?' }, :class => 'btn btn-danger' %>
				<%end%>

				
		<% end %>
	</tbody>
	</table>
</div>

<div class="login_panel .navy">
	<div class="title">
		<h2>Iniciar Sesión</h2>
	</div>
	<div class="form_login">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:role => "role"} ) do |f| %>
  	<div class="form-group"><%= f.label :email, "Correo Electronico" %><br />
  		<%= f.email_field :email, autofocus: true, :class => "form-control" %></div>
  	<div class="form-group"><%= f.label :password, "Contraseña" %><br />
    	<%= f.password_field :password, autocomplete: "off",:class => "form-control" %></div>
    <div class="form-group">
  		<% if devise_mapping.rememberable? -%>
    		<div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Mantener la sesión iniciada" %></div>
  		<% end -%>
  	</div>
  	<div class="form-group" style="text-align: center;">
  		<div><%= f.submit "Iniciar Sesión", :class => 'btn btn-primary' %>
  		 <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  			<%= link_to "¿Olvido su contraseña?", new_password_path(resource_name), :class => 'btn btn-danger' %><br />
		<% end -%></div>
  		
  	</div>
<% end %>


</div>
</div>
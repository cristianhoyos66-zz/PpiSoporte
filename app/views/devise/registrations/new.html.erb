
<div class="login_panel">
	<div class="title">
		<h2>Registro</h2>
	</div>
	<div class="form_login">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => 'form') do |f| %>
  		<%= devise_error_messages! %>
  		<div class="form-group"><%= f.label :email, "Correo Electronico" %><br />
  			<%= f.email_field :email, autofocus: true, :class => "form-control" %>
  		</div>
  		<div class="form-group"><%= f.label :password, "Contraseña"  %><br />
    		<%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    	</div>
  		<div class="form-group"><%= f.label :password_confirmation, "Confirmar Contraseña" %><br />
    		<%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    	</div>
  		<div class="form-group" style="text-align:center">
  			<%= f.submit "Registrarse", :class => 'btn btn-primary' %>
  		</div>
	<% end %>
	</div>

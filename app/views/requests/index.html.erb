<% @request.each do |request| %>
	<%= request.subject %>
	<%= request.date_hour %>
	<%= request.description %>
	<%= request.status %>
	<% if can? :destroy, request %>
	<%= link_to '[Eliminar]', request, method: :delete, data: { confirm: '¿Estás seguro?' } %>
	<%end%>
	<%= link_to '[Mostrar]', request %>
	<% end %>
	<% if can? :create, @request %>
	<%= link_to 'Crear una petición', new_request_path %>
<% end %>
